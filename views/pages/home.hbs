                    <h2 class="title text-center">Nổi bật</h2>
                    {{#each product}}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="{{images.[0]}}" alt="" width="255.48" height="255.48" />
                                    <h2>{{price}}</h2>
                                    <div class="product-name">
                                        <p>{{name}}</p>
                                    </div>

                                    <a href="/product-details/{{slugName}}" class="btn btn-default details"><i
                                            class="fa fa-search-minus"></i>Chi tiết</a>

                                    <a href="#" class="btn btn-default add-to-cart" value="{{slugName}}"><i
                                            class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>

                                </div>

                            </div>
                            <div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    <li><a href="#" value="{{slugName}}" class="add-to-like"><i
                                                class="fa fa-plus-square"></i>Yêu Thích</a></li>
                                    <li><a href="#"><i class="fa fa-plus-square"></i>So sánh</a></li>
